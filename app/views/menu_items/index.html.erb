<h1>Menu Items</h1>

<div class="mb-3">
  <%= link_to 'New Menu Item', new_menu_item_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <% @menu_items.each do |menu_item| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if menu_item.image_url.present? %>
          <%= image_tag menu_item.image_url, class: 'card-img-top', alt: menu_item.name %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= menu_item.name %></h5>
          <p class="card-text"><%= truncate(menu_item.description, length: 100) %></p>
          <p class="card-text">
            <strong>Price:</strong> <%= number_to_currency(menu_item.price) %><br>
            <strong>Category:</strong> <%= menu_item.category.name %><br>
            <strong>Preparation Time:</strong> <%= menu_item.preparation_time %> minutes
          </p>
          <div class="btn-group">
            <%= link_to 'View', menu_item, class: 'btn btn-info' %>
            <%= link_to 'Edit', edit_menu_item_path(menu_item), class: 'btn btn-primary' %>
            <%= link_to 'Delete', menu_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </div>
        </div>
        <div class="card-footer">
          <small class="text-muted">Status: <%= menu_item.available ? 'Available' : 'Not Available' %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>
